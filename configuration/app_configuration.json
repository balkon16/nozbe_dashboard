{
  "nozbe": {
    "endpoints": {
      "refresh_token": "https://api.nozbe.com:3000/oauth/secret/refresh",
      "data": "https://api.nozbe.com:3000/list"
    },
    "credentials_file": {
      "directory": "credentials",
      "file_name": "nozbe_credentials.json"
    },
    "entities": [
      "task",
      "project",
      "context"
    ]
  },
  "general": {
    "datetime_format": "%Y-%m-%dT%H:%M:%S",
    "data": {
      "directory": "data"
    }
  },
  "data_handler": {
    "mapping": {
      "task": {
        "fields": [
          "completed",
          "datetime",
          "id",
          "name",
          "project_id",
          "recur",
          "time",
          "ts",
          "_created_at_org"
        ]
      },
      "context": {
        "fields": [
          "id",
          "name",
          "ts"
        ]
      },
      "project": {
        "fields": [
          "_created_at",
          "_has_completed",
          "body",
          "description",
          "id",
          "name",
          "tags",
          "ts"
        ]
      }
    }
  }
}